@page
@model MyApp.Namespace.EditarEmpleadoModel
@{
}
<h1>Editar Empleado: @Model.Empleado.Nombre</h1>
<form method="post">
    <input type="hidden" asp-for="Empleado.Id"/>
    <div class="form-group">
        <label asp-for="Empleado.Nombre"></label>
        <input asp-for="Empleado.Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Empleado.Documento"></label>
        <input asp-for="Empleado.Documento" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Empleado.Salario"></label>
        <input asp-for="Empleado.Salario" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Empleado.FechaDeNacimiento"></label>
        <input asp-for="Empleado.FechaDeNacimiento" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Grabar</button>

</form>

<a asp-page="/Entities/Empleado/Detalles" class="btn-default">Volver a empleados</a>
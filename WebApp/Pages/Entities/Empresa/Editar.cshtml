@page
@model MyApp.Namespace.EditarEmpresaModel
@{
}
<h1>Editar Empresa: @Model.Empresa.Nombre</h1>
<form method="post">
    <input type="hidden" asp-for="Empresa.IdEmpresa"/>
    <div class="form-group">
        <label asp-for="Empresa.Nombre"></label>
        <input asp-for="Empresa.Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Empresa.Nit"></label>
        <input asp-for="Empresa.Nit" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Grabar</button>

</form>
<br>
<a asp-page="/Entities/Empresa/Detalles" class="btn-default">Volver a empresas</a>
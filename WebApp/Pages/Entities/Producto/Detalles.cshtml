@page
@model MyApp.Namespace.DetallesProductoModel
@{
}
<head>
    <style>
        tr {border-bottom: 1px solid #ddd;}
    </style>
</head>
<body>
    <h1>Listado de Productos</h1>
    <table style="width:100%" class ="Table">
        <tr>
            <th>Nombre</th>
            <th>Costo</th>
            <th>Editar</th>
            <th>Eliminar</th>
        </tr>
        @foreach (var producto in Model.Productos)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Valor</td>
                <td><a asp-page="/Entities/Producto/Editar" asp-route-productoId="@producto.Id"><i class="fas fa-edit"></i></a></td>
                <td><a asp-page="/Entities/Producto/Eliminar" asp-route-productoId="@producto.Id"><i class="far fa-trash-alt"></i></a></td>
            </tr>
        }
    </table>
    <div>
        <br>
        <a href="/Entities/Producto/Editar" class="btn btn-primary">Crear Producto</a>
    </div>
</body>
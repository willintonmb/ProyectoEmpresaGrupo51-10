@page
@model MyApp.Namespace.EditarDirectivoModel
@{
}
<h1>Editar Directivo: @Model.Directivo.Nombre</h1>
<form method="post">
    <input type="hidden" asp-for="Directivo.Id"/>
    <div class="form-group">
        <label asp-for="Directivo.Nombre"></label>
        <input asp-for="Directivo.Nombre" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Directivo.Documento"></label>
        <input asp-for="Directivo.Documento" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Directivo.Salario"></label>
        <input asp-for="Directivo.Salario" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Directivo.FechaDeNacimiento"></label>
        <input asp-for="Directivo.FechaDeNacimiento" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Grabar</button>

</form>

<a asp-page="/Entities/Directivo/Detalles" class="btn-default">Volver a directivos</a>